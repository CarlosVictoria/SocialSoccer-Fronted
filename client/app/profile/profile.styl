
.card
  box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2)
  display inline-block
  max-width 300px
  margin-bottom 35px
  margin-top 35px
  margin-left 220px
  text-align center

.title
  color: grey;
  font-size: 18px;
.editar
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #5cb85c;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
a
  text-decoration: none;
  font-size: 22px;
  color: black;

.img-profile
  border-radius 50%
.Editar
  padding: 10px 100px;
  font-size: 19px;
button:hover, a:hover
  opacity: 0.7;
