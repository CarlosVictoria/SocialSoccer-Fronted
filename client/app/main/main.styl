.Portfolio .gallery-grids
  margin 0
.Portfolio .nav-tabs
	border-bottom none
	margin 20px 0 20px
.Portfolio .nav-tabs > li
	margin-bottom 0
	margin 0 5px
.Portfolio .nav-tabs > li.active > a
	cursor pointer
	border none
	border-bottom 2px solid #f77924
.Portfolio .nav-tabs > li > a
	transition 1s
	padding 0 0 5px
	margin 5px 15px 0
	border-radius 0
	font-size 17px
	color #646464
	border none
	font-weight normal
.Portfolio .nav-tabs > li > a:hover, .Portfolio .nav-tabs > li > a:focus
	color #000
	background-color transparent
.Portafolio-item
	background-image url(../assets/images/ContactUs/contactUs.jpg)
	background-size cover
	background-repeat no-repeat
	transform-style preserve-3d
	width 100%
	height 300px
	position relative
	transition .9s ease
	box-shadow 0px 10px 15px -5px rgba(0,0,0,0.65)
.Portafolio-item:before
	content: "";
	width 100%
	height 100%
	background-color #000
	position absolute
	opacity 0.7
.Portafolio-wrap
	-webkit-perspective 800
	perspective 800
.Portafolio-wrap:hover .Portafolio-item
	transform rotateY(180deg)
.Ahead, Back
	color #fff
	position absolute
	width 100%
	height 100%
	backface-visibility hidden
.Back
	padding 0 15px
	text-align center
	color #fff
	transform rotateY(180deg)
.Back p
	text-align justify
.Back h4
	padding-top 4em
	text-align center
