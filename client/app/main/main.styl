.carousel-caption
    position: absolute
    right: 15%
    bottom: 35px
    width: 60%
    left: 15%
    z-index: 10
    padding-top: 20px
    padding-bottom: 20px
    color: #fff
    text-align: left
    text-shadow: 0 1px 2px rgba(0, 0, 0, .6)

.Carousel-padding
  padding-left: 0
  padding-right: 0
.row
  margin-left 0
  margin-right 0
.Intro
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  background-image: url("../../assets/images/main/balon2.jpg")
  &-container
    margin: 80px 0
  &-button
    background-color: MainColor
    color: white
    text-transform: uppercase
    font-size: 17px
    border-radius: 0px
    padding: 20px 30px
  &-title
    text-transform: uppercase
    font-weight: bold
    background: rgba(17, 24, 31, 0.9)
    padding: 30px 30px
    border-left: 1px solid MainColor
    >p
      margin: 0
      color: white
      line-height: 54px
    >p:nth-child(1)
      font-size: 26px
    >p:nth-child(2)
      font-size: 56px
      color: MainColor
    >p:nth-child(3)
      font-size: 34px
.carousel-inner > .item > img
  width 100%
  height 500px
  padding: 0px 0px 0.5em
.Btn-adsi
  margin-bottom 1em
.Slide-padding
  margin 0
.pintura
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  background-image: url("../../assets/images/main/18.jpg")
  width: 100%
  padding-bottom 1em
  background-attachment fixed


.TRABAJANDO
  font-size 100px
  text-align center
  color white

@media screen and (min-width:768px){
    .carousel-caption h3{font-size: 52px}
    .carousel-caption p{font-size: 32px}
    .carousel-caption{padding-bottom:160px}
}
