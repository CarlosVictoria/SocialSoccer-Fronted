.Carousel-container
  margin-top: 118px;

.carousel-caption
  position: absolute
  right: 15%
  bottom: 35px
  width: 60%
  left: 15%
  z-index: 10
  padding-top: 20px
  padding-bottom: 20px
  color: #fff
  text-align: left
  text-shadow: 0 1px 2px rgba(0, 0, 0, .6)


.Carousel-padding
  padding-left: 0
  padding-right: 0
.row
  margin-left 0
  margin-right 0
.Intro
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  background-image: url("../../assets/images/main/balon2.jpg")
  background-attachment fixed
  &-container
    margin: 80px 0
  &-button
    background-color: MainColor
    color: white
    text-transform: uppercase
    font-size: 17px
    border-radius: 0px
    padding: 20px 30px
  &-title
    text-transform: uppercase
    font-weight: bold
    background: rgba(17, 24, 31, 0.9)
    padding: 30px 30px
    border-left: 1px solid MainColor
    >p
      margin: 0
      color: white
      line-height: 54px
    >p:nth-child(1)
      font-size: 26px
    >p:nth-child(2)
      font-size: 43px
      color: MainColor
    >p:nth-child(3)
