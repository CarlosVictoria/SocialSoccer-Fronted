.carousel-caption
  >p
    font-size: 30px
    text-transform: uppercase;

.Carousel-padding
  padding-left: 0
  padding-right: 0

.row
  margin-left 0
  margin-right 0
.Intro
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  background-image: url("../../assets/images/main/balon2.jpg")
  &-container
    margin: 80px 0
  &-button
    background-color: MainColor
    color: white
    text-transform: uppercase
    font-size: 17px
    border-radius: 0px
    padding: 20px 30px
  &-title
    text-transform: uppercase
    font-weight: bold
    background: rgba(17, 24, 31, 0.9)
    padding: 30px 30px
    border-left: 1px solid MainColor
    >p
      margin: 0
      color: white
      line-height: 54px
    >p:nth-child(1)
      font-size: 26px
    >p:nth-child(2)
      font-size: 66px
      color: MainColor
    >p:nth-child(3)
      font-size: 34px
.carousel-inner > .item > img
  width 100%
  height 500px
  padding: 0px 0px 0.5em

.Informacion
  &-item
    margin 30px 0
    >i
      font-size 150px
      color green
    >p
      text-transform uppercase
      font-size 35px
    >h3
      font-weight bold
      font-size 50px
.Btn-adsi
  margin-bottom 1em
.Canchas
  display inline-block
  text-align center
  background rgba(0, 0, 0, 0.51)
  color white
  margin-top 1em
  border-radius 10px
  border solid 2px rgba(25, 78, 218, 0.26)
.imagen
  width 250px
  margin-top 1em
  border-radius 20px
  border solid 2px #f1efef

.Slide-padding
  margin 0

.pintura
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  background-image: url("../../assets/images/main/18.jpg")
  width: 100%
  padding-bottom 1em
